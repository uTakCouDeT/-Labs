@page
@model lab12New.Pages.Goods.goodModel
@{
	ViewData["Title"] = "Goods";
}

<h1>Goods</h1>

<div>
    <h4>Good</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <table class="table" border="0" style="position:relative;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Goods[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Goods[0].Count)</th>
                    <th>@Html.DisplayNameFor(model => model.Goods[0].Cost)</th>
                </tr>
                @foreach (var item in Model.Goods)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Goods[0].Id" asp-area="Goods">Edit</a> |
    <a asp-page="./Details" asp-route-id="@Model.Goods[0].Id" asp-area="Goods">Details</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Goods[0].Id" asp-area="Goods">Delete</a> |
    <a asp-page="./Create" asp-route-id="@Model.Goods[0].Id" asp-area="Goods">Create</a>
</div>
