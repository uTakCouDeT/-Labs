@page
@model lab12New.Pages.Companys.CompanyModel
@{
	ViewData["Title"] = "Company";
}

<h1>Company</h1>

<div>
    <h4>Good</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <table class="table" border="0" style="position:relative;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Companies[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Companies[0].Country)</th>
                    <th>@Html.DisplayNameFor(model => model.Companies[0].WayOfDelevery)</th>
                </tr>
                @foreach (var item in Model.Companies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WayOfDelevery)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Companies[0].Id">Edit</a> |
    <a asp-page="./Details" asp-route-id="@Model.Companies[0].Id">Details</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Companies[0].Id">Delete</a> |
    <a asp-page="./Create" asp-route-id="@Model.Companies[0].Id">Create</a>
</div>